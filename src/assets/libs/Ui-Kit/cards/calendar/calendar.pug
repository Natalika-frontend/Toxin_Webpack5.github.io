.calendar
  .calendar__wrapper
    .calendar__month
      span.material-icons-outlined.calendar__prev arrow_back
      .date
        h2.calendar__year
      span.material-icons-outlined.calendar__next arrow_forward
    .calendar__weekdays
      div Пн
      div Вт
      div Ср
      div Чт
      div Пт
      div Сб
      div Вс
    .calendar__days
    .calendar__buttons
      button(type="clear").calendar__btn-clear.button очистить
      button(type="submit").calendar__btn-submit.button применить

